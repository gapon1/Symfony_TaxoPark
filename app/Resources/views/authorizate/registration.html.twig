{% extends 'base.html.twig' %}

{% block title %}Login Taxo Park{% endblock %}

{% block body %}
    <h2>Registration</h2>

    <div class="form-wrapper">
        {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.name) }}
        {{ form_row(form.plainPassword.first, {
            'label': 'Password'
        }) }}
        {{ form_row(form.plainPassword.second, {
            'label': 'Repeat Password'
        }) }}

        {{ form_row(form.roles) }}
        <button class="btn btn-lg btn-primary btn-block" formnovalidate type="submit">Register</button>

        {{ form_end(form) }}
    </div>

{% endblock %}
